<Window x:Class="PatternsUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PatternsUI"
        mc:Ignorable="d"
        Title="Patternz" Height="450" Width="800">
    <Grid>
        <Menu x:Name="MainMenu">
            <MenuItem x:Name="File" Header="File">
                <MenuItem Header="New"/>
                <MenuItem Header="Save"/>
                <Separator/>
                <MenuItem Header="Exit"/>
            </MenuItem>
            <MenuItem x:Name="Edit" Header="Edit">
                <MenuItem Header="Undo"/>
                <MenuItem Header="Redo"/>
            </MenuItem>
            <MenuItem x:Name="Help" Header="Help">
                <MenuItem Header="About"/>
            </MenuItem>
            
        </Menu>
        <Button x:Name="Profile" Margin="751,10,10,390">
            <Button.Content>
                <Image Name="ProfilePic" Source="Resources/Admin.png"/>
            </Button.Content>
        </Button>
    </Grid>
</Window>
